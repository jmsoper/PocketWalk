<p id="notice"><%= notice %></p>

<h1>Tours</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= link_to tour.name, tour_path(tour.id) %></td>
        <td><%= tour.description %></td>
        <td><%= tour.user_id %></td>
        <% if current_user && tour.user_id === current_user.id %>
          <td><%= link_to 'Show', tour %></td>
          <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
          <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

